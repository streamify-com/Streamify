{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "esnext",
    "paths": {
      "@/*": ["./src/*"],
      "@shared-components/*": ["../../packages/shared-components/*"],
      "@shared-components/animations/*": [
        "../../packages/shared-components/animations/*"
      ],
      "@shared-components/components/*": [
        "../../packages/shared-components/components/*"
      ],
      "@shared-components/data/*": ["../../packages/shared-components/data/*"],
      "@shared-components/features/*": [
        "../../packages/shared-components/features/*"
      ],
      "@shared-components/forms/*": [
        "../../packages/shared-components/forms/*"
      ],
      "@shared-components/graphics/*": [
        "../../packages/shared-components/graphics/*"
      ],
      "@shared-components/hooks/*": [
        "../../packages/shared-components/hooks/*"
      ],
      "@shared-components/layouts/*": [
        "../../packages/shared-components/layouts/*"
      ],
      "@shared-components/lib/*": ["../../packages/shared-components/lib/*"],
      "@shared-components/styles/*": [
        "../../packages/shared-components/styles/*"
      ],
      "@shared-components/types/*": [
        "../../packages/shared-components/types/*"
      ],
      "@shared-components/ui/*": ["../../packages/shared-components/ui/*"]
    }
  },
  "include": [
    ".eslintrc.json",
    "index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.js",
    "**/*.cjs",
    ".next/types/**/*.ts",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
