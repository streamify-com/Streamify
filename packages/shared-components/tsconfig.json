{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared-components/*": ["./*"],
      "@shared-components/animations/*": ["./animations/*"],
      "@shared-components/assets/*": ["./assets/*"],
      "@shared-components/components/*": ["./components/*"],
      "@shared-components/data/*": ["./data/*"],
      "@shared-components/features/*": ["./features/*"],
      "@shared-components/forms/*": ["./forms/*"],
      "@shared-components/graphics/*": ["./graphics/*"],
      "@shared-components/hooks/*": ["./hooks/*"],
      "@shared-components/layouts/*": ["./layouts/*"],
      "@shared-components/lib/*": ["./lib/*"],
      "@shared-components/styles/*": ["./styles/*"],
      "@shared-components/types/*": ["./types/*"],
      "@shared-components/ui/*": ["./ui/*"]
    }
  }
}
